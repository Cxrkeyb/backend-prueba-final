{
  "name": "backend-prueba-tecnica",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "copy-files": "mkdir -p ./dist/templates && mkdir -p ./dist/web/extensions/locales && cp -a ./src/templates ./dist && cp -a ./src/web/extensions/locales ./dist/web/extensions",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build:prod": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist && npm run copy-files",
    "build:dev": "tsc --project tsconfig.json && npm run copy-files",
    "start:prod": "npm run run-migrations && pm2-runtime dist/index.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/databases/postgresql/config.ts",
    "run-migrations": "npm run typeorm migration:run",
    "gen-migration": "npm run typeorm migration:generate ./src/databases/postgresql/migrations/backendMigration",
    "revert-migrations": "npm run typeorm migration:revert",
    "empty-migration": "typeorm migration:create ./src/databases/postgresql/migrations/backendMigration"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "aws-sdk": "^2.1570.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "eslint-plugin-unused-imports": "^3.0.0",
    "express": "^4.18.3",
    "jose": "^5.2.2",
    "mailcomposer": "^4.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.11",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.13.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-prettier": "^5.1.1",
    "eslint-plugin-promise": "^6.1.1",
    "module-alias": "^2.2.3",
    "prettier": "^3.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
